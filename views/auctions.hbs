<nav class="navbar white">
	<div class="navbar-left"></div>
	<div class="navbar-center">
		<a href="/">
			<h3>Auction <span class="text-red">IT!</span></h3>
		</a>
	</div>
	<div class="navbar-right f-s-16">
		<a href="/auctions">Auctions</a>
		<a href="/logout">Logout</a>
	</div>
</nav>

<div class="container white cast-shadow" style="min-height: 85vh;">
	<form id="auctionSearch" action="/api/auction" method="POST">
		<div class="row">
			<div class="col-3"></div>
			<div class="col-4">
				<input type="text" name="auctionID" id="auctionID" class="form-control" placeholder="Enter auction id" required>
			</div>
			<div class="col-2">
				<button type="submit" class="btn red form-control">SEARCH</button>
			</div>
		</div>
	</form>

	<div class="row" style="min-height: 50vh;">
		<div class="col-12">
			<h3 class="text-center">All Auctions</h3>
			<div class="ruler">
				<span></span>
				<span></span>
				<span></span>
			</div>
			<div id="allAuctions">
				<!-- Inject list -->
			</div>
		</div>
	</div>

	<button type="button" class="btn circle fixed red f-s-30" title="Create auction" id="createAuction">&plus;</button>
</div>

<div class="modal cast-shadow" id="createAuctionModal">
	<div class="modal-content">
		<div class="modal-header red text-white">
			CREATE AUCTION
			<span class="close">&times;</span>
		</div>
		<div class="modal-body">
			<form action="/auctions/create" method="POST">
				<div class="form-group">
					<label for="item" class="text-white">What item are you selling ?</label>
					<br><br>
					<input type="text" class="form-control" name="item" id="item" required>
				</div>
				<div class="form-group">
					<label for="itemDesc" class="text-white">Describe in detail (<span id="descCount">150</span> chars)</label>
					<br><br>
					<textarea id="itemDesc" name="itemDesc" class="form-control" rows="5" cols="40" maxlength="150" required></textarea>
				</div>
				<div class="form-group">
					<label for="itemPrice" class="text-white">Enter base price ($):</label>
					<br><br>
					<input type="number" class="form-control" name="itemPrice" id="itemPrice" required>
				</div>
				<div class="form-group">
					<label for="period" class="text-white">How long should it run (hours)?</label>
					<br><br>
					<input type="number" class="form-control" name="period" id="period" required>
				</div>
				<div class="form-group">
					<button type="submit" class="btn red">CREATE</button>
				</div>
			</form>
		</div>
	</div>
</div>

{{#contentFor 'scripts' }}
	<script type="text/javascript" src="js/auctions.js"></script>
{{/contentFor}}